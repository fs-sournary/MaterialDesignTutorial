<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
    </style>

    <style name="Widget.MaterialTutorial.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?android:attr/colorPrimaryDark</item>
        <item name="android:theme">@style/ThemeOverlay.MaterialComponents.Dark</item>
        <item name="android:popupTheme">@style/ThemeOverlay.MaterialComponents.Light</item>
    </style>

    <style name="TextAppearance.MaterialTutorial.Title" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="Widget.MaterialTutorial.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="iconTint">?android:attr/textColorPrimary</item>
        <item name="android:paddingStart">@dimen/dp_12</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="iconPadding">4dp</item>
    </style>

    <style name="TextChildTransformationTheme" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TvTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_model_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="Widget.MaterialTutorial.TextInputLayout.OutlineBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="boxStrokeColor">@color/input_layout_stroke</item>
        <item name="hintTextAppearance">
            @style/TextAppearance.MaterialTutorial.TextInputLayout.HintText
        </item>
    </style>

    <style name="TextAppearance.MaterialTutorial.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Crane -->
    <style name="Theme.MaterialTutorial.ShapeTheme.Crane" parent="">
        <!-- color -->
        <item name="colorPrimary">#5D1049</item>
        <item name="colorPrimaryDark">#490D3A</item>
        <item name="colorSecondary">#E30425</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorPrimaryVariant">#4E0D3A</item>
        <item name="colorSurface">#FFFBFA</item>
        <item name="colorError">#EF9A43</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnSurface">#442B2D</item>
        <item name="colorOnBackground">#442B2D</item>

        <!-- shape -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Crane.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Crane.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Crane.LargeComponent
        </item>

        <item name="chipStyle">@style/Widget.Crane.Chip</item>
        <item name="textInputStyle">@style/Widget.Crane.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Crane.BottomSheetDialog</item>
    </style>

    <style name="ShapeAppearance.Crane.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_4</item>
    </style>

    <style name="ShapeAppearance.Crane.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_16</item>
    </style>

    <style name="ShapeAppearance.Crane.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_20</item>
    </style>

    <style name="Widget.Crane.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipCornerRadius">@null</item>
    </style>

    <style name="Widget.Crane.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="Theme.Crane.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Crane.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Crane.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Crane.BottomSheet</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.Crane.BottomSheet" parent="">
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
    </style>

    <!-- Fort nightly -->
    <style name="Theme.MaterialTutorial.Theme.FortNightly" parent="">
        <!-- color -->
        <item name="colorPrimary">#000000</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorPrimaryVariant">#4E0D3A</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#442B2D</item>
        <item name="colorError">#C5032B</item>
        <item name="colorOnError">#FFFBFA</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorOnBackground">#442B2D</item>
        <item name="colorSecondary">#6B38FB</item>

        <!-- shape -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.FortNightly.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.FortNightly.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.FortNightly.LargeComponent
        </item>

        <item name="chipStyle">@style/Widget.FortNightly.Chip</item>
        <item name="floatingActionButtonStyle">@style/Widget.FortNightly.FloatingActionButton</item>
        <item name="textInputStyle">@style/Widget.FortNightly.TextInputLayout</item>
        <item name="bottomSheetDialogTheme">@style/Theme.FortNightly.BottomSheetDialog</item>
    </style>

    <style name="ShapeAppearance.FortNightly.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ShapeAppearance.FortNightly.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ShapeAppearance.FortNightly.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="Widget.FortNightly.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="chipCornerRadius">@null</item>
    </style>

    <style name="Widget.FortNightly.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.FortNightly.FloatingActionButton
        </item>
    </style>

    <style name="ShapeAppearanceOverlay.FortNightly.FloatingActionButton" parent="">
        <item name="cornerSize">@null</item>
    </style>

    <style name="Widget.FortNightly.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="Theme.FortNightly.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.FortNightly.BottomSheet.Model</item>
    </style>

    <style name="Widget.FortNightly.BottomSheet.Model" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="shapeAppearanceOverlay">
            @style/ShapeAppearanceOverlay.FortNightly.BottomSheet
        </item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="ShapeAppearanceOverlay.FortNightly.BottomSheet" parent="">
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyTopLeft">cut</item>
    </style>

    <!-- Shrine -->
    <style name="Theme.MaterialTutorial.Shrine" parent="">
        <!-- color -->
        <item name="colorPrimary">#FEDBD0</item>
        <item name="colorOnPrimary">#442B2D</item>
        <item name="colorPrimaryVariant">#FBB8AC</item>
        <item name="colorPrimaryDark">#FFC2AF</item>
        <item name="colorSecondary">#FEEAE6</item>
        <item name="colorOnSecondary">#442B2D</item>
        <item name="colorSurface">#FFFBFA</item>
        <item name="colorOnSurface">#442B2D</item>
        <item name="android:colorBackground">#FFFFFF</item>
        <item name="colorOnBackground">#442B2D</item>
        <item name="colorError">#C5032B</item>
        <item name="colorOnError">#FFFBFA</item>

        <!-- shape -->
        <item name="shapeAppearanceSmallComponent">
            @style/ShapeAppearance.Shrine.SmallComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.Shrine.MediumComponent
        </item>
        <item name="shapeAppearanceLargeComponent">
            @style/ShapeAppearance.Shrine.LargeComponent
        </item>

        <!-- Component -->
        <item name="textInputStyle">@style/Widget.Shrine.TextInputLayout</item>
        <item name="chipStyle">@style/Widget.Shrine.Chip</item>
        <item name="floatingActionButtonStyle">@style/Widget.Shrine.FloatingActionButton</item>
        <item name="bottomSheetDialogTheme">@style/Theme.Shrine.BottomSheetDialogTheme</item>
    </style>

    <style name="ShapeAppearance.Shrine.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/dp_4</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.Shrine.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">@dimen/dp_8</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.Shrine.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerSize">@dimen/dp_24</item>
        <item name="cornerFamily">cut</item>
    </style>

    <style name="Widget.Shrine.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" />

    <style name="Widget.Shrine.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipCornerRadius">0dp</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Shrine.Chip</item>
    </style>

    <style name="ShapeAppearanceOverlay.Shrine.Chip" parent="">
        <item name="cornerSize">@dimen/dp_4</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="Widget.Shrine.FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="Theme.Shrine.BottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Shrine.BottomSheet.Modal</item>
    </style>

    <style name="Widget.Shrine.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="background">?android:attr/colorBackground</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Shrine.BottomSheet</item>
    </style>

    <style name="ShapeAppearanceOverlay.Shrine.BottomSheet" parent="">
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopRight">@dimen/dp_24</item>
        <item name="cornerFamilyTopRight">cut</item>
    </style>

    <style name="ThemeOverlay.MaterialTutorial.MaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar" />

    <style name="ThemeOverlay.MaterialTutorial.MaterialCalendar.Fullscreen" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen" />

    <style name="Theme.MaterialTutorial.NavFadeThrough.Base" parent="AppTheme">
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:statusBarColor">@color/status_bar</item>
    </style>

    <style name="Theme.MaterialTutorial.NavFadeThrough" parent="Theme.MaterialTutorial.NavFadeThrough.Base">
    </style>
</resources>
