<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_no_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="auto"
        android:layout_marginStart="@dimen/fab_no_style_margin_start"
        android:layout_marginTop="@dimen/fab_no_style_margin_top"
        android:src="@drawable/ic_add_icon_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_style"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_style_margin_start"
        android:layout_marginTop="@dimen/fab_style_margin_top"
        android:src="@drawable/ic_add_icon_24dp"
        app:fabSize="auto" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_fab_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/button_fab_state_margin_start"
        android:layout_marginTop="@dimen/button_fab_state_margin_top"
        android:text="@string/show_fab"
        app:backgroundTint="@color/colorPrimary" />
</LinearLayout>
