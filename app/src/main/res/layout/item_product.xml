<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_item_product"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_72"
    android:transitionGroup="true"
    android:background="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_supporting_visual"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_marginStart="@dimen/dp_16"
        android:scaleType="centerCrop"
        android:src="@drawable/img_cafe_book"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:includeFontPadding="false"
        android:text="Pencil"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toEndOf="@id/image_supporting_visual"
        app:layout_constraintTop_toTopOf="@id/image_supporting_visual" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:includeFontPadding="false"
        android:text="In staock"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@id/image_supporting_visual"
        app:layout_constraintStart_toEndOf="@id/image_supporting_visual" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:text="$1.45"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="@dimen/sp_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
